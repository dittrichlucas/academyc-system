{
	"compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
	  "target": "es2018",
	  "module": "commonjs",
	  "inlineSourceMap": true,
	  "strict": true,
	  "outDir": "./dist",
	  "noImplicitAny": true,
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "strictPropertyInitialization": false,
	  "lib": [
		"esnext",
		"dom",
	  ]
	},
	"include": [
	  "src/**/*", "test/**/*"
	]
}
